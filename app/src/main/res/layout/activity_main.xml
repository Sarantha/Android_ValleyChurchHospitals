<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/dashboardBackground"
    android:orientation="vertical">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/signin"
        android:id="@+id/TopDesign">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dashboardMainTitle"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_gravity="center"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/underMainTitile"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAllCaps="true"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="20dp"
        android:layout_below="@id/TopDesign">
        <LinearLayout
            android:id="@+id/nameAndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_below="@id/TopDesign"
            android:layout_weight="2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userNameDispaly"
                android:textStyle="bold"
                android:textColor="@color/signin"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:text="DD/MM//YYYY"
                android:textStyle="bold"
                android:textColor="@color/signin"
                android:textSize="18sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/logoLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:elevation="15dp"
                android:src="@drawable/logo"></ImageView>
        </LinearLayout>
    </LinearLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/wrapper"
        android:layout_marginTop="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <!-- everything you already have -->
            <LinearLayout
                android:id="@+id/apmt1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/nameAndDate"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/design"
                android:orientation="vertical"

                >
                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/dashboardBackground"
                    android:text="@string/AppointmentandDoctors"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_marginRight="20dp"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@color/signin"
                        app:cardCornerRadius="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            >
                            <ImageView
                                android:id="@+id/apmtIcon"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/apmt_icon"
                                android:clickable="true"
                                android:onClick="onAppointment">
                            </ImageView>
                            <TextView
                                android:layout_marginTop="7dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/BookAppointments"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="20dp"
                        android:padding="15dp"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@color/signin"
                        app:cardCornerRadius="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            >
                            <ImageView
                                android:id="@+id/doctorIcon"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/doctor_icon"
                                android:clickable="true"
                                android:onClick="onDoctor">
                            </ImageView>
                            <TextView
                                android:layout_marginTop="7dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/AvailableDoctors"
                                android:gravity="center"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondApmt"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/apmt1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/design"
                android:orientation="vertical">
                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/dashboardBackground"
                    android:text="@string/MyAppointmentsandPrescription"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_marginRight="20dp"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@color/signin"
                        app:cardCornerRadius="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            >
                            <ImageView
                                android:id="@+id/myApmtIcon"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/my_appointments_icon"
                                android:clickable="true"
                                android:onClick="onMyAppointments">
                            </ImageView>
                            <TextView
                                android:layout_marginTop="7dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/MyAppointments"
                                android:gravity="center"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="20dp"
                        android:padding="15dp"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@color/signin"
                        app:cardCornerRadius="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            >
                            <ImageView
                                android:id="@+id/prescriptionIcon"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/prescription_icon"
                                android:clickable="true"
                                android:onClick="onPrescription">
                            </ImageView>
                            <TextView
                                android:layout_marginTop="7dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Prescriptions"
                                android:gravity="center"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/personal"
                android:layout_below="@id/secondApmt"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:background="@drawable/design">
                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/dashboardBackground"
                    android:text="@string/Personal"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_marginRight="20dp"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@color/signin"
                        app:cardCornerRadius="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            >
                            <ImageView
                                android:id="@+id/settings"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/settings_icon"
                                android:clickable="true"
                                android:onClick="onSettings">
                            </ImageView>
                            <TextView
                                android:layout_marginTop="7dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/Settings"
                                android:textAlignment="center"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="20dp"
                        android:padding="15dp"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@color/signin"
                        app:cardCornerRadius="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            >
                            <ImageView
                                android:id="@+id/about"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/information_icon"
                                android:clickable="true"
                                android:onClick="onInformation">
                            </ImageView>
                            <TextView
                                android:layout_marginTop="7dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/about"
                                android:gravity="center"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        </TableLayout>
    </ScrollView>

</RelativeLayout>