<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrescriptionActivity"
    android:background="@color/dashboardBackground"
    android:orientation="vertical">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/signin"
        android:id="@+id/TopDesign">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dashboardMainTitle"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_gravity="center"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/underMainTitile"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAllCaps="true"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Prescription"
        android:textAllCaps="false"
        android:background="@color/signin"
        android:textColor="@color/signin_button"
        android:layout_below="@id/TopDesign"
        android:layout_margin="15dp"
        android:id="@+id/addBtn"
        android:onClick="onAddNew"></Button>
    <ListView
        android:layout_below="@id/addBtn"
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:dividerHeight="1dp"></ListView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/empty"
        android:text="Empty Text"></TextView>


</RelativeLayout>